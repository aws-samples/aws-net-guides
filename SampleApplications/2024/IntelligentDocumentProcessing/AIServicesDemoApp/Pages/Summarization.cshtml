@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TextSummarizationModel
@{
    ViewData["Title"] = "Text summarization";
}

<div>
    <h2 class="display-4">Generate summary</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FormFile" class="control-label">Document:</label>
            <input asp-for="FormFile" class="form-control" type="file" />
        </div>
        <div class="form-group pt-3">
            <input type="submit" class="btn btn-primary" asp-page-handler="GenerateSummaryWithTextract" value="Generate summary (AI + GenAI)"/>
            <input type="submit" class="btn btn-primary" asp-page-handler="GenerateSummary" value="Generate summary (GenAI)"/>
            <input type="submit" class="btn btn-primary" asp-page-handler="GenerateSummaryConverse" value="Generate summary (Converse API)"/>
        </div>
    </form>
    
    <div class="container">
            <div class="row">
                <div class="col-6 pt-3">
                    @if (!string.IsNullOrEmpty(Model.FileName))
                    {
                        <img class="w-100" src="uploads/@Model.FileName" />
                    }
                </div>
                <div class="col-6 pt-3">
                    @Html.Raw(Model.Result)
                </div>
            </div>
        </div>

</div>