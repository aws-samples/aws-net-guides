@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AnalyzeExpenseModel
@{
    ViewData["Title"] = "Invoice reporting";
}

<div>
    <h2 class="display-4">Invoice reporting</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FormFile" class="control-label">Receipt image:</label>
            <input asp-for="FormFile" class="form-control" type="file" />
        </div>
        <div class="form-group pt-3">
            <input type="submit" value="Submit invoice" class="btn btn-primary" />
        </div>
    </form>

    <div class="container">
        <div class="row">
            <div class="col-6 pt-3">
                @if (!string.IsNullOrEmpty(Model.FileName))
                {
                    <img class="w-100" src="uploads/@Model.FileName" />
                }
            </div>
            <div class="col-6 pt-3">
                @Html.Raw(Model.Result)
            </div>
        </div>
    </div>

</div>